<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CartActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Free delivery"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/freedelivery"
        android:layout_marginRight="10dp"
        android:background="#B388FF"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 ITEMS"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/freedelivery"
        android:id="@+id/item_size"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        ></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_size"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_view"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="14dp">
            <ImageView
                android:layout_width="80dp"
                android:scaleType="centerCrop"
                android:layout_height="80dp"
                android:src="@drawable/image7"></ImageView>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/card_view"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Stars Veg"
                android:id="@+id/item_type"
                android:textColor="#000"
                android:layout_marginLeft="5dp"
               android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:text="Monthly plan"
                android:textSize="12sp"
                android:textColor="#000"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/item_type"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="\u20B9 3435"
                android:textColor="#000"
                android:id="@+id/price"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_marginRight="10dp"></TextView>

        </RelativeLayout>

        <View
            android:id="@+id/vi"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/card_view"
            android:layout_marginTop="5dp"
            android:background="#D7D7D7"></View>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/date"
            android:layout_below="@+id/card_view">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_event_black_24dp"
                android:id="@+id/icon_date"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/05/2020"
                android:textStyle="normal"
                android:layout_toRightOf="@+id/icon_date"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginLeft="30dp"
               android:layout_marginTop="20dp">
            </TextView>

            <ImageView
                android:layout_width="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:layout_alignParentEnd="true"></ImageView>
        </RelativeLayout>

        <View
            android:id="@+id/vi1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/date"
            android:layout_marginTop="5dp"
            android:background="#D7D7D7"></View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/slot"
            android:layout_height="50dp"
            android:layout_below="@+id/date">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time_black_24dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/time_icon"
                ></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/time_icon"
               android:layout_marginLeft="30dp"
                android:textStyle="normal"
                android:text="Select delivery slot"
                ></TextView>

            <ImageView
                android:layout_width="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:layout_alignParentEnd="true"></ImageView>
        </RelativeLayout>

        <View
            android:id="@+id/vi2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/slot"
            android:layout_marginTop="5dp"
            android:background="#D7D7D7"></View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/slot"
            android:id="@+id/tiffintype"
            android:layout_marginTop="10dp"
            android:layout_height="50dp">

           <Spinner
               android:layout_width="match_parent"
               android:layout_height="match_parent"

               android:id="@+id/spinner"
               ></Spinner>
        </RelativeLayout>

        <View
            android:id="@+id/vi3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tiffintype"
            android:layout_marginTop="5dp"
            android:background="#D7D7D7"></View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/vi3"
            android:id="@+id/addon"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/add_icon"
                ></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:id="@+id/tvaddon"
                android:layout_toRightOf="@+id/add_icon"
                android:text="Add more to your meal"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#000"
                android:id="@+id/textsome"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="85dp"
                android:layout_toLeftOf="@+id/card_view1"
                android:textStyle="normal"
                android:layout_below="@+id/tvaddon"
                android:text="Add-ons will be delivered along with your meals everyday"></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_view1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="14dp">
                <ImageView
                    android:layout_width="50dp"
                    android:scaleType="centerCrop"
                    android:layout_height="50dp"
                    android:src="@drawable/image7"></ImageView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <View
            android:id="@+id/vi4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/addon"
            android:layout_marginTop="5dp"
            android:background="#D7D7D7"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vi4"
            android:id="@+id/billing"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billing Details"
                android:textStyle="bold"
                android:id="@+id/bill"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_below="@+id/bill"
                android:textSize="15dp"
                android:id="@+id/tot"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9 4158.00"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/bill"
                android:textSize="15dp"
                android:id="@+id/total_price"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:textStyle="bold">
            </TextView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Details"
                android:layout_below="@+id/tot"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:id="@+id/prod"
                android:layout_marginTop="15dp"
                android:textStyle="normal">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9 1664.00"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/total_price"
                android:textSize="15dp"
                android:id="@+id/product_discount_price"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:textStyle="normal">
            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Charge"
                android:layout_below="@+id/prod"
                android:textSize="15dp"
                android:id="@+id/delivery"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:textStyle="normal">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9 4158.00"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/product_discount_price"
                android:textSize="15dp"
                android:id="@+id/delivery_charge_price"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:textStyle="normal">
            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Details"
                android:layout_below="@+id/delivery"
                android:id="@+id/pack"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:textStyle="normal">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9 4158.00"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/delivery_charge_price"
                android:textSize="15dp"
                android:id="@+id/packing_charge_price"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:textStyle="normal">
            </TextView>

        </RelativeLayout>

        <View
            android:id="@+id/vi5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/billing"
            android:layout_marginTop="5dp"
            android:background="#D7D7D7"></View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vi5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"

                android:textSize="15dp"
                android:id="@+id/tottalpay"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9 4158.00"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:textSize="15dp"
                android:id="@+id/total_pay_price"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:textStyle="bold">
            </TextView>

            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="120dp"
                android:layout_height="wrap_content"
                android:text="Package Submit"></Button>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>