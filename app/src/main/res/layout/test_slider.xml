<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/orderViewPager"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            />
    <LinearLayout
        android:id="@+id/orderSliderDots"
        android:layout_below="@+id/flipper"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:background="#000000"
            android:text="EAT NOW"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/eatnow"
            android:layout_margin="10dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:drawableRight="@drawable/spinnerdownlogo"
            />
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:id="@+id/tablayout"
            android:background="#FFF"
            app:tabSelectedTextColor="@color/transparent"
            app:tabIndicatorColor="#000"
            app:tabTextColor="#000000"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_gravity="bottom"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/orderll"
        android:orientation="vertical"
        />
</LinearLayout>