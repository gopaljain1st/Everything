<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EC9797"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Today"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold|italic" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Calories"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold|italic" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:text="Daily Target  :"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/totalCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="2000  "
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/textView7"
                android:gravity="right"
                android:layout_gravity="center|right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food  :  No Cal Remaining"
                android:textColor=" #FFFFFF"
                android:layout_marginRight="15dp"
                android:textSize="15sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
      >
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Food"
            android:textColor="#FFFFFF"
            android:textStyle="bold|italic"
            android:textSize="30dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="65dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/breakFast"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"  >
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:scaleType="centerCrop"
                android:layout_height="65dp"
                app:srcCompat="@drawable/breakfast" />
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Greek Salad"
                android:fontFamily="cursive"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BREAKFAST"
                android:fontFamily="cursive"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="100dp"
                android:textColor=" #008000"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="10dp"
                android:textColor=" #008000"
                android:text="|" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:id="@+id/lunch"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/lunch" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:text="Dal Roti"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="100dp"
                android:layout_marginTop="35dp"
                android:fontFamily="cursive"
                android:text="LUNCH"
                android:textColor=" #FFA500"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="10dp"
                android:text="|||"
                android:textColor="#FFA500" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="65dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/dinner"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/dinner" />
            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veg Biryani"
                android:fontFamily="cursive"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DINNER"
                android:fontFamily="cursive"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="100dp"
                android:textColor=" #0000FF"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="10dp"
                android:textColor=" #0000FF"
                android:text="||" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            android:orientation="vertical">
            <Button
                android:id="@+id/addNew"
                android:layout_width="160dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/border3"
                android:padding="5dp"
                android:textColor=" #0000FF"
                android:text="+ Add New" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>