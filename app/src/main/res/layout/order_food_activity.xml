<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/thali"
        android:scaleType="centerCrop"
        android:id="@+id/orderFoodImage"
        >
    </ImageView>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/orderFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dalchini Veg thali with Sweet"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/OrderFoodItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Thali Price : \u20B9 120/-"
        android:textColor="#000"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:text="Details"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thali Type : Golden"
                android:id="@+id/thaliType"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Of Items : 5"
                android:id="@+id/thaliItemCount"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minimum Time To Order : 4hrs"
                android:id="@+id/thaliOrderTime"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/border4"
            android:id="@+id/viewItems"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="View Items"
            />
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/border4"
            android:id="@+id/addThali"
            android:visibility="visible"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Add"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/hideLayout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="2.5"
            android:gravity="center"
            android:visibility="visible"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/incrementThali"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/add"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/qtyThali"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:text="1"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#000"
                />
            <ImageView
                android:id="@+id/removeThali"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/remove"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Offers applied"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        >
    </TextView>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/orderFoodCashBack"
    android:text="Upto 75 cashback with this order"
    android:layout_marginLeft="15dp">
</TextView>
    <View
        android:layout_marginTop="20dp"
        android:background="#808080"
        android:layout_marginHorizontal="12dp"
        android:layout_width = "match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border1">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Nutritional Info."
    android:textSize="20dp"
    android:textColor="#000"
    android:paddingTop="10dp"
    android:layout_marginLeft="20dp"
    android:textStyle="bold"
    >
</TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Calories :"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            >
        </TextView>
        <TextView
           android:id="@+id/orderFoodCalories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="568 cal"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            >
        </TextView>
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="#808080"
        android:layout_marginHorizontal="12dp"
        android:layout_width = "match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 Rotis, Dal Makhni, Rice,Rayata, Sabji, Rasgulla and Papad "
        android:textSize="17dp"
        android:id="@+id/orderFoodDescription"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="12dp"
        android:gravity="center"
        android:textColor="#000"
        >
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginHorizontal="12dp"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:text="Make way for this one fit wonder! with your favourites packed in one meal,our fit thalis take deciding what to eat off your plate."
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>
</ScrollView>